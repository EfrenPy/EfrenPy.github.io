{
  "name": "efrenpy-academic-website",
  "version": "1.0.0",
  "description": "Personal academic website for Efrén Rodríguez Rodríguez",
  "repository": {
    "type": "git",
    "url": "https://github.com/EfrenPy/EfrenPy.github.io.git"
  },
  "keywords": [
    "jekyll",
    "academic",
    "portfolio"
  ],
  "author": "Efrén Rodríguez Rodríguez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EfrenPy/EfrenPy.github.io/issues"
  },
  "homepage": "https://EfrenPy.github.io",
  "engines": {
    "node": ">= 18.0.0"
  },
  "type": "module",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "terser": "^5.36.0",
    "sharp": "^0.33.5"
  },
  "scripts": {
    "uglify": "terser assets/js/vendor/jquery/jquery-3.7.1.min.js assets/js/plugins/jquery.fitvids.js assets/js/plugins/jquery.greedy-navigation.js assets/js/plugins/jquery.magnific-popup.js assets/js/plugins/jquery.smooth-scroll.min.js assets/js/plugins/stickyfill.min.js assets/js/_main.js -c -m -o assets/js/main.min.js",
    "watch:js": "onchange \"assets/js/**/*.js\" -e \"assets/js/main.min.js\" -- npm run build:js",
    "build:js": "npm run uglify",
    "dev": "bundle exec jekyll serve --config _config.yml,_config.dev.yml",
    "build": "bundle exec jekyll build && npm run build:js",
    "serve": "bundle exec jekyll serve",
    "optimize-images": "node scripts/optimize-images-sharp.js"
  }
}
